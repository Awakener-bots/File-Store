# Protect content (prevent forwarding)
PROTECT_CONTENT = False

# Disable share button
DISABLE_BUTTON = False

# ===========================
# NOTES
# ===========================

# 1. Rename this file to config.py after filling in your values
# 2. Never commit config.py to version control
# 3. Keep your tokens and API keys secure
